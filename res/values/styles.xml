<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="TextAppearance" parent="android:TextAppearance">
	</style>


	<style name="text_label">	              
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>               
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:layout_marginRight">5dip</item>
		<item name="android:layout_marginTop">10dip</item>
		<item name="android:paddingLeft">6dip</item>
		<item name="android:paddingRight">7dip</item>
		<item name="android:paddingTop">8dip</item>
	</style>
	
	<style name="edit_text_layout">	
		<item name="android:minWidth">250dip</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:layout_marginRight">5dip</item>	
		<item name="android:capitalize">none</item>
		<item name="android:autoText">false</item>       
	</style>
	<style name="list_item_style">

		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
		<item name="android:focusable">false</item>
		<item name="android:height">40dip</item>
		<item name="android:paddingLeft">2dip</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium
		</item>
		<item name="android:layout_marginLeft">3dip</item>
		<item name="android:gravity">center_vertical|left</item>
	</style>
	<style name="empty_textview_style">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium
		</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:layout_marginTop">10dip</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:layout_marginRight">10dip</item>
		<item name="android:layout_marginBottom">10dip</item>
		<item name="android:paddingLeft">20dip</item>
		<item name="android:paddingRight">20dip</item>
		<item name="android:paddingTop">20dip</item>
		<item name="android:paddingBottom">20dip</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>

	</style>
</resources>
