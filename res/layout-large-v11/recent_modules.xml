<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frags"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.imaginea.android.sugarcrm.CustomActionbar
        android:id="@+id/custom_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/actionbar_height" />
    <!-- "Fragment Modules" -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        
         <fragment
                android:id="@+id/list_imagefrag"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                class="com.imaginea.android.sugarcrm.ModuelImageListFragment" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <fragment
                android:id="@+id/list_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                class="com.imaginea.android.sugarcrm.RecentModuleListFragment" />
            <!-- "Fragment ModuleList" -->
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container_module_detail"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" >
        </FrameLayout>
    </LinearLayout>

</LinearLayout> <!-- android:layout_width="@dimen/titles_size" -->