<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_actionbar"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/actionbar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/applaunch" />

    <TextView
        android:id="@+id/actionbar_moduleName"
        style="@style/header_text_label"
        android:layout_width="200dp"
        android:layout_height="@dimen/actionbar_height"
        android:paddingRight="20dp"
        android:layout_toRightOf="@+id/actionbar_logo"
        android:contentDescription="?android:text"
        android:singleLine="true"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:src="@drawable/settings"
        android:visibility="gone" />


   <View
        android:id="@+id/actionbar_homeseperator1"
        android:layout_width="1dp"
        android:layout_height="@dimen/actionbar_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/settings"
        android:background="#e2e2e2" /> 
        
    <LinearLayout
        android:id="@+id/addNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:onClick="true"
        android:layout_toLeftOf="@id/actionbar_homeseperator1"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/add" />

        <TextView
            android:id="@+id/addNewText"
            style="@style/header_text_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/addNew" />
    </LinearLayout>

    <View
        android:id="@+id/actionbar_homeseperator2"
        android:layout_width="1dp"
        android:layout_height="@dimen/actionbar_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/addNew"
        android:background="#e2e2e2"
        android:visibility="gone" />
        
    <ImageView
        android:id="@+id/sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/actionbar_homeseperator2"
        android:src="@drawable/sync"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/sync"
        android:src="@drawable/search"
        android:visibility="gone" />
            
    <Spinner
        android:id="@+id/orderBySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/actionbar_moduleName"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone" />

<!--     <View
        android:id="@+id/actionbar_homeseperator3"
        android:layout_width="1dp"
        android:layout_height="@dimen/actionbar_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/orderBySpinner"
        android:background="#c4c4c4"
        android:visibility="gone" /> -->

    <LinearLayout
        android:id="@+id/editDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/editDoneImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_done" />

        <TextView
            style="@style/header_text_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/editDone" />
    </LinearLayout>

</RelativeLayout>