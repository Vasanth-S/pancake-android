<?xml version="1.0" encoding="utf-8"?>
<!-- TableRow xmlns:android="http://schemas.android.com/apk/res/android"-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
		android:orientation="horizontal"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" 
	    android:visibility="gone">
	<TextView android:id="@+id/detailRowLabel1"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:width="120dip"
		android:maxLines="3"
		android:inputType="textMultiLine"
		style="@style/text_label" 
		android:contentDescription="?android:text"/>
	<TextView android:id="@+id/detailRowValue1"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		style="@style/text_row_value"
		android:maxLines="3"
		android:inputType="textMultiLine" 
		android:contentDescription="?android:text"
		android:autoLink="web|email|map"/>
		<!--  Phone is handled in code as any number present in the value gets converted into a phone number -->
</LinearLayout>
