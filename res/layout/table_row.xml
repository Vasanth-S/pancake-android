<?xml version="1.0" encoding="utf-8"?>
<!-- TableRow xmlns:android="http://schemas.android.com/apk/res/android"-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			
		    android:orientation="horizontal"
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent">
		<TextView android:id="@+id/detailRowLabel"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:minWidth="70dip"
			style="@style/text_label" 
			android:contentDescription="?android:text"/>
		<TextView android:id="@+id/detailRowValue"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			style="@style/text_row_value" 
			android:minLines="2"
			android:inputType="text"
			android:contentDescription="?android:text"
			android:autoLink="web|email|map"/>
			<!--  Phone is handled in code as any number present in the value gets converted into a phone number -->
</LinearLayout>